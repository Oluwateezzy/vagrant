Vagrant.configure("2") do |config|
  # Use Ubuntu 22.04 (Jammy) base box
  config.vm.box = "ubuntu/jammy64"

  # Configure VM resources for VMware Desktop provider
  config.vm.provider "vmware_desktop" do |v|
    v.memory = 1024 # Set memory to 1GB
    v.cpus = 2      # Set CPU count to 2
  end

  # Set up a private network with a static IP
  config.vm.network "private_network", ip: "192.168.56.17"

  # Set up a bridged public network (no static IP)
  config.vm.network "public_network", bridge: "en0: Wi-Fi (AirPort)"
end
